<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivSavedPhoto"
        android:layout_width="249dp"
        android:layout_height="311dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="72dp"
        tools:srcCompat="@tools:sample/avatars" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="14dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivSavedPhoto"
        app:selectionRequired="true"
        app:singleSelection="true">

        <Button
            android:id="@+id/btnHeadwear"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:icon="@drawable/headwear" />

        <Button
            android:id="@+id/btnTop"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:icon="@drawable/shirt" />

        <Button
            android:id="@+id/btnOverwear"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:icon="@drawable/overwear" />

        <Button
            android:id="@+id/btnBottoms"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:icon="@drawable/bottoms" />

        <Button
            android:id="@+id/btnShoes"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:icon="@drawable/shoes" />

        <Button
            android:id="@+id/btnAccessories"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:icon="@drawable/accessories" />



    </com.google.android.material.button.MaterialButtonToggleGroup>

    <ImageButton
        android:id="@+id/ibAdd"
        android:layout_width="58dp"
        android:layout_height="55dp"
        android:background="@drawable/add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="503dp" />

</androidx.constraintlayout.widget.ConstraintLayout>