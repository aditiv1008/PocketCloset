<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundtint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <EditText
        android:id="@+id/etUsername"
        android:layout_width="330dp"
        android:layout_height="58dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:layout_weight="1"
        android:backgroundTint="#41FFFFFF"
        android:ems="10"
        android:hint="Username"
        android:padding="8dp"
        android:background="@drawable/text_format"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#B7FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="330dp"
        android:background="@drawable/text_format"
        android:layout_height="58dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="336dp"
        android:layout_weight="1"
        android:backgroundTint="#41FFFFFF"
        android:ems="10"
        android:hint="Password"
        android:textColor="#FFFFFFFF"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColorHint="#B7FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="116dp"
        android:layout_height="65dp"
        android:layout_marginTop="48dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="Log In"
        android:textColor="#B7FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPassword"
        app:strokeColor="#DAFFFFFF"
        app:strokeWidth="2dp" />


    <Button
        android:id="@+id/btnSignupIntent"
        android:layout_width="312dp"
        android:layout_height="76dp"
        android:backgroundTint="#00FFFFFF"
        android:layout_marginStart="44dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:text="Don't have an account? Sign Up"
        android:textColor="#B7FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

    <TextView
        android:id="@+id/imageView"
        android:layout_width="301dp"
        android:layout_height="86dp"
        android:layout_marginTop="132dp"
        android:fontFamily="@font/pacifico"
        android:text="PocketCloset"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="86dp"
        android:layout_height="87dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/highheel"
        android:backgroundTint="#FFFFFF"
        android:foregroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>